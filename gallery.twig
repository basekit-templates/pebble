{% extends "layout.twig" %}

{% block content %}

<div class="bk-pt-gallery">
    {{widget('extendednavigation', 'navigationheader', {})|raw}}
    <header>
        <div class="wrapper clearfix">
            <div class="header-left">
                    {{widget('content', 'headercontentleft', {"content":"<p>Lorem ip, dolor sit amet consectet</p>"})|raw}}
                <div class="header-img">
                    {{widget('image', 'imageleft', { 'src': asset('images/img-left.png'), 'title': '', 'alt': '', 'fileName': 'img-left.png', 'fileSize': '58kb', 'imageSize': '275 x 152', 'imageWidth': '100%'})|raw}}
                </div>
            </div> 
            <div class="companyheader clearfix">
                {% if profile.logo|length > 0 %}
                    {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                {% else %}
                    {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
                    {{widget('companyname', 'companyname', {"business": "profile"})|raw}}
                {% endif %}
            </div>
            <div class="header-right">
                {{widget('content', 'headercontentright', {"content":"<p>Lorem ip, dolor sit amet consectet</p>"})|raw}}
                <div class="header-img">
                {{widget('image', 'imageright', { 'src': asset('images/img-right.png'), 'title': '', 'alt': '', 'fileName': 'img-right.png', 'fileSize': '58kb', 'imageSize': '275 x 152', 'imageWidth': '100%'})|raw}}
                </div>
            </div>
        </div><!--end wrapper clearfix-->
    </header>

    <div class="main wrapper clearfix">
        <div class="canvas">
            <div id="featuregallery">
                {{widget('gallery', 'featuregallery', {})|raw}}
            </div>
            {{zone('main')|raw}}
        </div>
    </div>

    <footer>
        <div class="wrapper clearfix">
            <div class="responsivecolumns columns-two-50-50">
                <div class="column columns-two-left">
                    {{widget('content', 'footercolumn1', {"content":"<h2>Lorem Ip Soda</h2><p>Integer a Tortor Dui. Nullam nec ante mi. Morbi sodales urna sit amet mauris elementum quis rutrum lacus gravida. Proin feugia libero quis.</p>"})|raw}}
                </div>
                <div class="column columns-two-right">
                    {{widget('content', 'footercolumn2', {"content":"<h2>Aliquam Sodales</h2><p>Copyright Â© 2013. All Rights Reserved.</p>"})|raw}}

                    {{widget('socialicons', 'socialicons', {'googleplus': 'https://plus.google.com/101946323226233111530', 'linkedin':'http://www.linkedin.com/company/basekit', 'facebook': 'https://www.facebook.com/TeamBaseKit', 'twitter': 'https://twitter.com/basekit', 'youtube': 'https://www.youtube.com/user/TeamBaseKit', 'rss': 'http://blogdiseno.basekit.es/feed/'})|raw}}
                </div>
            </div>
        </div>
    </footer>
</div>

<script src="{{asset('assets/isotape.js')}}"></script>
<script>

(function ()
{
	// Add the niceScroll plugin to the iframe html element
	$(document).ready(function ()
	{
        var featuregallery = $('#page-zones__template-widgets__gallery-featuregallery'),
            timeout = null,
            setuptimeout = null;

        function setUpGallery() {
            featuregallery.isotope({
                itemSelector: 'li',
                masonry: {}
            });
        }

        featuregallery.on('prerender', function() {
            featuregallery.isotope('destroy');
        });

        featuregallery.on('rendered', function(){
            clearTimeout(setuptimeout);
            setuptimeout = setTimeout(function() {
                setUpGallery();
            },1000);
        });

        window.addEventListener( 'resize', function() {
            //clearTimeout(timeout);
            //timeout = setTimeout(function() {
                featuregallery.isotope('reLayout');
            //},1000);
        }, false );

        setUpGallery();
    });
}());
</script>

{% endblock %}
